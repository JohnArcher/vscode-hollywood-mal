{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Hollywood compile (default)",
            "type": "shell",
            "command": "${config:hollywood.exePath} ${file} -compile ${fileBasenameNoExtension} -exetype ${config:hollywood.outputExeTypes}"
        },
        {
            "label": "Hollywood compile (multiple targets)",
            "type": "shell",
            "command": "${config:hollywood.exePath} ${file} -compile ${fileBasenameNoExtension} -exetype win32|classic"
        },
        {
            "label": "Start current Hollywood script",
            "type": "shell",
            "command": "${config:hollywood.exePath} ${file} "
        },
        {
            "label": "Start Hollywood Main script",
            "type": "shell",
            "command": "${config:hollywood.exePath} ${workspaceFolder}/${config:hollywood.mainFile}",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Start Hollywood Main script (nodebug)",
            "type": "shell",
            "command": "${config:hollywood.exePath} ${workspaceFolder}/${config:hollywood.mainFile} -nodebug"
        }
    ]
}
